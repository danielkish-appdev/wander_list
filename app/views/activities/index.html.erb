<div class="page-header">
  <h1>
    Activities
    <a href="/activities/new" class="btn btn-lg btn-success">New Activity</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Image</th>
        <th>Activity type</th>
        <th>Description</th>
        <th>User</th>
        <th>Country</th>
        <th>Actions</th>
      </tr>

      <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.address %></td>
        <td><img src='<%= activity.image %>' class='img-responsive'></td>
        <td><%= activity.activity_type %></td>
        <td><%= activity.description %></td>
        <td><%= activity.user.email %></td>
        <td><%= activity.country.name %></td>
        <td>
          <a href="/activities/<%= activity.id %>" class="btn btn-primary">Show</a>
          <a href="/activities/<%= activity.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_activity/<%= activity.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
