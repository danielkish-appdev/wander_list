<div class="page-header">
  <h3>Activity #<%= @activity.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @activity.name %></dd>

      <dt>Address</dt>
      <dd><%= @activity.address %></dd>

      <dt>Image</dt>
      <dd><%= @activity.image %></dd>

      <dt>Activity type</dt>
      <dd><%= @activity.activity_type %></dd>

      <dt>Description</dt>
      <dd><%= @activity.description %></dd>

      <dt>User</dt>
      <dd><%= @activity.user_id %></dd>

      <dt>Country</dt>
      <dd><%= @activity.country_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/activities" class="btn btn-primary">
        Back
      </a>
      <a href="/activities/<%= @activity.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_activity/<%= @activity.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
